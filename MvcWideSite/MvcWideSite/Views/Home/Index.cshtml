@model MvcWideSite.ViewModels.WebPageViewModel

@{
    ViewBag.Title = @Html.Raw(Model.Title);
}

<div class="pageTitle">
    <h1>@Model.Title</h1>
</div>

@foreach (var content in Model.ContentList)
{
    <div id="@content.Name" name="@content.Name">
        @Html.Raw(content.HtmlContent)
    </div>
}

@if (Model.Title.ToUpper() == "CONTACT")
{
    using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="userForm form-horizontal">
            <div class="form-group">
                <label for="Name" class="col-xs-3 col-sm-2 control-label">Name</label>
                <div class="col-xs-9 col-sm-10">
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" />
                </div>
            </div>

            <div class="form-group">
                <label for="Email" class="col-xs-3 col-sm-2 control-label">Email</label>
                <div class="col-xs-9 col-sm-10">
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" />
                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="col-xs-3 col-sm-2 control-label">Telephone</label>
                <div class="col-xs-9 col-sm-10">
                    <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Telephone Number" />
                </div>
            </div>

            <div class="form-group">
                <label for="Comments" class="col-xs-3 col-sm-2 control-label">Comments</label>
                <div class="col-xs-9 col-sm-10">
                    <textarea class="form-control" name="comments" rows="3"></textarea>
                </div>
            </div>
            <div class="well">
                <button type="submit" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Submit</button>

            </div>
        </div>
    }
}

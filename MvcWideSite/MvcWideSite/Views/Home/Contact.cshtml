@model MvcWideSite.ViewModels.EnquiryViewModel

@{
    ViewBag.Title = @Html.Raw(Model.Title);
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    <div class="pageTitle">
        <h1>@Model.Title</h1>
    </div>

    foreach (var content in Model.ContentList)
    {
        <div id="@content.Name" name="@content.Name">
            @Html.Raw(content.HtmlContent)
        </div>
    }

    if (Model.EmailSent)
    {
        <h2>Your enquiry has been sent.</h2>
    }
    else
    {
        <div class="userForm form-horizontal">
            <div class="form-group">
                <label for="Name" class="col-xs-3 col-sm-2 control-label">Name</label>
                <div class="col-xs-9 col-sm-10">
                    @Html.TextBoxFor(m => m.EnquiryName, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.EnquiryName)
                </div>
            </div>

            <div class="form-group">
                <label for="Email" class="col-xs-3 col-sm-2 control-label">Email</label>
                <div class="col-xs-9 col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="col-xs-3 col-sm-2 control-label">Telephone</label>
                <div class="col-xs-9 col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>

            <div class="form-group">
                <label for="Comments" class="col-xs-3 col-sm-2 control-label">Comments</label>
                <div class="col-xs-9 col-sm-10">
                    @Html.TextAreaFor(m => m.Comments, 3, 3, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Comments)
                </div>
            </div>
            <div class="well">
                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Submit</button>
            </div>
        </div>
    }
}
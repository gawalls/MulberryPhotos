<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")    
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home", new { routeName = "home" })">
                    <img class="navbar-brand" id="site-logo" alt="header image" src="~/Content/Images/mulberry_photos_header.jpg" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul id="mainMenu" class="nav navbar-nav">
                <li>@Html.ActionLink("Welcome", "Index", "Home", new { routeName = "home" }, null)</li>
                <li>@Html.ActionLink("Family Portraits", "Index", "Home", new { routeName = "family" }, null)</li>
                <li>@Html.ActionLink("Babies and Toddlers", "Index", "Home", new { routeName = "babies-and-toddlers" }, null)</li>
                <li>@Html.ActionLink("Children and Teens", "Index", "Home", new { routeName = "childrens-and-teens" }, null)</li>
                <li>@Html.ActionLink("Generations", "Index", "Home", new { routeName = "generations" }, null)</li>
                <li>@Html.ActionLink("Prices and Products", "Index", "Home", new { routeName = "prices-and-products"}, null)</li>
                <li>@Html.ActionLink("Frequently Asked Questions", "Index", "Home", new { routeName = "frequently-asked-questions" }, null)</li>
                <li>@Html.ActionLink("About", "Index", "Home", new { routeName = "about" }, null)</li>
                <li>@Html.ActionLink("Contact", "Index", "Home", new { routeName = "contact" }, null)</li>
            </ul>
        </div>
    </div>

    <div class="container">
        <div class="body">
            <div class="body-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <link href="https://fonts.googleapis.com/css?family=Cinzel|Quattrocento+Sans" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
